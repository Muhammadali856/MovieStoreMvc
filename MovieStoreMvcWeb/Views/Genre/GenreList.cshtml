@model IEnumerable<Genre>

<section class="container">
    <div class="tbl-container">
        <h2>Genres</h2>

        <table>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GenreName</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Genre" asp-route-id="@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                        <a asp-action="Delete" asp-controller="Genre" asp-route-id="@item.Id" onclick="return window.confirm('Are you sure?')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </table>
        <div class="input-container">
            <a asp-action="Add" asp-controller="Genre" class="btn btn-sec">Add</a>
        </div>
    </div>
</section>